@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
   

    <style>
        #info {
            background-color: #044073;
            color: white;
            padding-left: 60px;
            padding-right: 60px;
            padding-top: 60px;
            padding-bottom: 90px;
            position: absolute;
            width: 100%;
            left: 0;
        }

        #fp {
            position: absolute;
            width: 100%;
            left: 0;
        }

        .carousel-inner {
            height: 540px;
        }

        .icon-success {
            color: #131d6c;
            font-size: large;
            margin: 30px;
        }

        #button1 {
            background-color: #f27111;
            border-color: #f27111;
        }

        .btn-warning:hover {
            background-color: #fc981d !important;
        }

        #myCarousel {
            width: 1100px;
        }
    </style>

</head>
<body>
    <!--Below is the placeholder for the navbar, you need this before the container so the navbar stays at the top-->
    <div id="nav-placeholder"><!--This is a placeholder for the navigation bar--></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <center>
                    <h1>Welcome to the School App</h1>
                    <p>This app will help manage and keep track of student activities for your school</p>
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">

                            <div class="item active">
                                <img src="~/images/students_classroom.jpg" alt="Middle School Classroom" style="width:100%;">
                            </div>

                            <div class="item">
                                <img src="~/images/collegeclass.jpg" alt="College" style="width:100%;">
                            </div>

                            <div class="item">
                                <img src="~/images/classroom.jpg" alt="Class" style="width:100%;">
                            </div>

                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <strong><span class="glyphicon glyphicon-chevron-down icon-success"></span></strong>
                </center>
            </div>
        </div>
        <div class="container">
            <hr>
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>For Parents</h3>
                        </div>
                        <div class="panel-body">
                            Parents can self register themselves and their children. Once class assignments
                            are done, parents can track their kids' class allocations, review attendence,
                            track feedback from the teachers etc.
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>For Teachers </h3>
                        </div>
                        <div class="panel-body">
                            Track your class allocations, record attendence and assessments and send
                            emails to students parents
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>For Administrators</h3>
                        </div>
                        <div class="panel-body">
                            Perform class allocations, student and teacher assignments and keep track
                            of student and teachers activities
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <br>
                    <br>
                    <p class="pull-right"><a href="http://www.schoolapp.com">Contact Us</a> &nbsp; ©SchoolApp 2017.</p>
                    <br>
                    <br>
                </div>
            </div>
        </div>

</body>
</html>