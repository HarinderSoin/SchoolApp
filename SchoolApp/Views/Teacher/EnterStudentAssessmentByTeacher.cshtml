    <tr>
        <th>Student Name</th>
        <th>Student Phone</th>
        <th>Student Email</th>
        <th>Subject</th>
        <th>Grade</th>
        <th>Academic Year</th>
        <th>Assessment Date</th>
    </tr>
    </thead>
